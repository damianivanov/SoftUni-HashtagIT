@model HashtagIT.Web.ViewModels.HashtagSets.AllHashtagSetsByUserViewModel
@{
    Layout = "~/Views/Shared/_NavBar.cshtml";
}

    <div class="container">

            <div style="text-align:center">
                <h1 style="font-family: 'Kaushan Script', 'Arial Narrow', Arial, sans-serif">My Hashtag Sets</h1>
                <i class="fas fa-user" style="color: #fed136"></i>
                <label style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">@Model.UserName</label>
                <div class="ml-auto">
                    <a href="/HashtagSet/Create" class="btn btn-primary">Create</a>
                </div>
            </div>
        <br />
        <div>
            @foreach (var hashtagSet in @Model.HashtagSets)
            {
                <div class="row px-3 form-group">
                    <a href="/HashtagSet/ById/@hashtagSet.Id">
                        <label class="text-dark bg-light">@hashtagSet.Text</label>
                    </a>
                </div>
            }
        </div>

    </div>