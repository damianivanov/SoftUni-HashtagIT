@model HashtagIT.Web.ViewModels.HashtagSets.HashtagSetViewModel
@{
    Layout = "~/Views/Shared/_NavBar.cshtml";
}

<br />
<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="card">
            <img class="profile-pic mr-3" src="">
            <div class="flex-column">
                <div>
                    <label class="font-weight-bold">@Model.UserUserName</label>
                </div>

                <div class="row px-3 form-group">
                    <label class="text-muted bg-light mt-4 mb-3" placeholder="">@Model.Text</label>
                </div>

                <div class="row px-3">
                    <div>
                        <i class="fas fa-list"></i>
                        <label>@Model.Category.Name</label>
                        @if (@Model.IsPrivate)
                        {

                            <i class="fas fa-user-lock"></i>
                            <label>Private</label>
                        }
                        else
                        {
                            <i class="fas fa-globe-americas"></i>
                            <label>Public</label>
                        }
                    </div>
                    <div class="ml-auto">                     
                        <a  href="/HashtagSet/Delete/@Model.Id" class="btn btn-danger">Delete</a> 
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>