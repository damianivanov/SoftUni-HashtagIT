@model HashtagIT.Web.ViewModels.HashtagSets.HashtagSetViewModel

<div class="container">
    <br />
    <div class="row d-flex justify-content-center">
        <div class="rounded-right">
            <div>
                <i class="fas fa-user" style="color: #fed136"></i>
                <label class="font-weight-bold">@Model.UserUserName</label>
            </div>
            <div class="row px-3">
                <label class="text-dark bg-light mb-3" placeholder="">@Model.Text</label>
                <p>
                    <i class="fas fa-list"></i>
                    <label>@Model.Category.Name</label> |
                    @if (@Model.IsPrivate)
                    {
                        <i class="fas fa-user-lock"></i>
                        <label>Private</label>
                    }
                    else
                    {
                        <i class="fas fa-globe-americas"></i>
                        <label>Public</label>
                    } |
                    <i class="far fa-clock"></i>
                    <time datetime="@Model.CreatedOn.ToString("f")" class="font-italic"></time> |
                    <i class="fas fa-hashtag"></i>
                    <label class="text-danger">Hashtags: @Model.HashtagCount</label>
                    <div class="ml-auto">
                        <a asp-controller="HashtagSet" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
                        <a asp-controller="HashtagSet" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                    </div>
                </p>
            </div>
        </div>
    </div>
</div>